# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Use tabs with 4 spaces for indentation
[*.py]
indent_style = tab
tab_width = 4

[*.*css]

[*.*js]
indent_style = tab
tab_width = 4

[*.*ts]
indent_style = tab
tab_width = 4
max_line_length = 80
curly_bracket_next_line = true
spaces_around_operators = true
spaces_around_brackets = outside
indent_brace_style = K&R
wildcard_import_limit = 999
continuation_indent_size = 1

[*.*json]

[*.*html]
indent_style = tab
tab_width = 4

# Add more file patterns and their corresponding indentation settings as needed
